{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "sourceMap": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "removeComments": true,
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "typeRoots": ["node_modules/@types", "src/@types"],
        "allowJs": true
    },
    "exclude": ["node_modules", "out", ".next"]
}